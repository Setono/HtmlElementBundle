{
    "name": "setono/html-element-bundle",
    "description": "Easily create reusable HTML elements and use them in your Symfony (with Twig) application",
    "license": "MIT",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Joachim LÃ¸vgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": ">=8.1",
        "setono/html-element": "dev-master",
        "symfony/config": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "symfony/event-dispatcher": "^6.0",
        "symfony/event-dispatcher-contracts": "^1.1 || ^2.5 || ^3.1",
        "symfony/http-foundation": "^6.0",
        "symfony/http-kernel": "^6.0",
        "symfony/messenger": "^6.0",
        "symfony/twig-bundle": "^6.0",
        "twig/twig": "^3.5"
    },
    "require-dev": {
        "matthiasnoback/symfony-config-test": "^4.3",
        "matthiasnoback/symfony-dependency-injection-test": "^4.3",
        "nyholm/symfony-bundle-test": "^2.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.17",
        "psalm/plugin-symfony": "^3.1",
        "setono/code-quality-pack": "^2.4"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Setono\\HtmlElementBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Setono\\HtmlElementBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "analyse": "psalm",
        "check-style": "ecs check",
        "fix-style": "ecs check --fix",
        "phpspec": "phpspec run",
        "phpunit": "phpunit"
    }
}
